{
  "project_name": "Multi-User Meal Recommender (RAG + LoRA)",
  "display_name": "Multi-User Smart Diet & Meal Planner (RAG + LoRA)",
  "version": "1.3.0",
  "author": {
    "name": "Visheshta Garg",
    "university": "IIT Roorkee",
    "department": "Civil Engineering",
    "degree": "B.Tech"
  },
  "short_description": "Batch-capable multi-user meal plan generator using Retrieval-Augmented Generation (RAG) + LoRA fine-tuned generator. Supports 1–6 meals per user, many goals, CSV batch input, tabular UI, and CSV export for all users.",
  "tech_stack": {
    "language": "Python 3.10+",
    "frameworks": ["Streamlit", "LangChain (optional)", "Transformers", "PEFT (LoRA)"],
    "vector_store": ["ChromaDB (recommended)", "FAISS (optional)"],
    "ml": ["torch", "datasets", "sentence-transformers"],
    "optimization": ["cvxpy (optional)"],
    "logging": ["loguru"],
    "data": ["pandas", "numpy"]
  },
  "goals_and_capabilities": {
    "batch_mode": "Process many users at once from a CSV manifest (one row per user).",
    "meal_count": {
      "min": 1,
      "max": 6,
      "behavior": "PlannerAgent enforces bounds; if out-of-range, value clipped and flagged in evaluation"
    },
    "expanded_goals": [
      "Weight loss",
      "Maintenance",
      "Muscle gain",
      "Fat loss",
      "Balanced diet",
      "Keto",
      "Low-carb",
      "High-protein",
      "Diabetic-friendly",
      "Heart-healthy",
      "Pescatarian",
      "Gluten-free"
    ],
    "per_user_customization": [
      "Target calories (optional, auto-calculated if missing)",
      "Diet preference (Vegetarian/Non-vegetarian/Vegan/Pescatarian)",
      "Allergies / Dislikes / Health conditions",
      "Meals per day (1–6)",
      "Meal timing preference (e.g., early breakfast)"
    ]
  }
}
