{
  "project_name": "Smart Meal Planner (RAG + LoRA)",
  "version": "3.1.0",
  "author": {
    "name": "Visheshta Garg",
    "university": "IIT Roorkee",
    "department": "Civil Engineering",
    "degree": "B.Tech"
  },
  "description": "A multi-user AI meal planner that uses RAG and LoRA to create personalized meal plans (1â€“6 meals/day) with a beautiful Streamlit dashboard and Excel/CSV batch mode.",
  "tech_stack": {
    "language": "Python 3.10+",
    "frameworks": ["Streamlit", "LangChain", "Transformers", "PEFT"],
    "vector_store": ["ChromaDB", "FAISS"],
    "libraries": ["torch", "datasets", "pandas", "numpy", "sentence-transformers", "cvxpy", "plotly", "openpyxl"]
  },
  "assets": {
    "images": {
      "banner": "assets/banner_mealplanner.png",
      "logo": "assets/logo_forkleaf.png",
      "background": "assets/bg_gradient.png",
      "icons": {
        "user": "assets/icons/user.png",
        "meal": "assets/icons/meal.png",
        "chart": "assets/icons/chart.png",
        "download": "assets/icons/download.png"
      }
    },
    "theme": {
      "primary_color": "#7C4DFF",
      "secondary_color": "#00C853",
      "background_gradient": "linear-gradient(135deg,#F5F7FF,#FFFFFF)",
      "font": "Poppins",
      "card_style": "glass",
      "shadow": "0 6px 20px rgba(0,0,0,0.1)"
    }
  },
  "csv_excel_input": {
    "description": "Batch input sheet for multiple users. Accepted as CSV or XLSX.",
    "file_name": "data/user_profiles.xlsx",
    "sheet_name": "Users",
    "required_columns": [
      "UserID",
      "Name",
      "Age",
      "Gender",
      "Goal",
      "Target_Calories",
      "Diet_Preference",
      "Meals_Per_Day",
      "Meal_Times (semicolon-separated)",
      "Allergies",
      "Health_Conditions"
    ],
    "optional_columns": [
      "Activity_Level (Low/Medium/High)",
      "Cuisine_Preference (Indian, Continental, etc.)"
    ]
  },
  "output_format": {
    "columns": [
      "UserID",
      "Name",
      "Goal",
      "Meals_Per_Day",
      "Meal",
      "Meal_Time",
      "Items",
      "Meal_Calories",
      "Total_Calories",
      "Target_Calories",
      "Calorie_Deviation_%"
    ],
    "display": {
      "single_user": "Table with icons + pie chart per meal",
      "multi_user": "Excel-style DataFrame with color-coded deviation"
    },
    "export_paths": ["outputs/single_user_plan.csv", "outputs/multi_user_plan.xlsx"]
  },
  "ui": {
    "framework": "Streamlit",
    "entrypoint": "app.py",
    "pages": ["ðŸ‘¤ Single User", "ðŸ“‚ Multi-User Excel Mode"],
    "features": [
      "Banner image at top",
      "Animated cards for each meal",
      "Pie chart of calorie distribution",
      "CSV/Excel upload box with validation messages",
      "Download buttons with icons",
      "Dark/light theme toggle"
    ]
  }
}

