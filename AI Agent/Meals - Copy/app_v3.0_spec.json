{
  "project_name": "Smart Meal Planner (RAG + LoRA)",
  "version": "3.0.0",
  "author": {
    "name": "Visheshta Garg",
    "university": "IIT Roorkee",
    "department": "Civil Engineering",
    "degree": "B.Tech"
  },
  "description": "An attractive AI-driven multi-user meal planner with RAG + LoRA integration. Supports 1‚Äì6 meals per user, includes meal times, aesthetic dashboard, and CSV batch input/output for nutrition recommendations.",
  "tech_stack": {
    "language": "Python 3.10+",
    "frameworks": ["Streamlit", "LangChain", "Transformers", "PEFT"],
    "vector_store": ["ChromaDB", "FAISS"],
    "libraries": ["torch", "datasets", "pandas", "numpy", "sentence-transformers", "cvxpy", "plotly", "loguru", "st-theme"]
  },
  "capabilities": {
    "modes": ["Single User", "Batch CSV Mode"],
    "meal_range": { "min": 1, "max": 6 },
    "features": [
      "Personalized RAG-grounded LoRA meal generation",
      "Auto-assigned or user-defined meal times",
      "Attractive Streamlit dashboard with animations and metrics cards",
      "Interactive plots and downloadable CSVs"
    ]
  },
  "csv_input_format": {
    "description": "Allowed CSV format for batch mode ‚Äî each row = 1 user profile.",
    "required_columns": [
      "UserID",
      "Name",
      "Age",
      "Gender",
      "Goal",
      "Target_Calories",
      "Diet_Preference",
      "Meals_Per_Day",
      "Allergies",
      "Health_Conditions",
      "Meal_Times (semicolon-separated)"
    ],
    "optional_columns": [
      "Activity_Level (Low/Medium/High)",
      "Cuisine_Preference (Indian, Continental, etc.)"
    ],
    "validation_rules": [
      "Meals_Per_Day must be between 1 and 6",
      "Target_Calories must be between 800 and 4500",
      "Meal_Times count must match Meals_Per_Day",
      "Gender ‚àà {Male, Female, Other}",
      "Goal ‚àà Supported_Goals list"
    ]
  },
  "supported_goals": [
    "Weight loss",
    "Weight maintenance",
    "Muscle gain",
    "Fat loss",
    "Balanced diet",
    "Keto",
    "Low-carb",
    "High-protein",
    "Diabetic-friendly",
    "Heart-healthy",
    "Pescatarian",
    "Gluten-free"
  ],
  "output_format": {
    "columns": [
      "UserID",
      "Name",
      "Goal",
      "Meals_Per_Day",
      "Meal",
      "Meal_Time",
      "Items",
      "Meal_Calories",
      "Total_Calories",
      "Target_Calories",
      "Calorie_Deviation_%"
    ],
    "display": {
      "single_user": "Stylish data table with icons, metrics, and pie chart",
      "multi_user": "Combined styled table with deviation highlights"
    },
    "export": ["outputs/single_user_plan.csv", "outputs/multi_user_plan.csv"]
  },
  "ui": {
    "framework": "Streamlit",
    "entrypoint": "app.py",
    "theme": {
      "mode": "auto",
      "primary_color": "#7C4DFF",
      "secondary_color": "#00C853",
      "background": "gradient(linear, 0% 0%, 100% 100%, from(#F0F4FF), to(#FFFFFF))",
      "font": "Poppins",
      "card_shadow": "0 4px 14px rgba(0, 0, 0, 0.1)"
    },
    "layout": {
      "tabs": ["üë§ Single User Planner", "üìÇ Multi User CSV Mode"],
      "sidebar": {
        "title": "ü•ó Smart Meal Planner",
        "sections": [
          "Upload or Enter User Details",
          "Select Mode (Single / Batch)",
          "Download Output Files"
        ],
        "footer_note": "Built with ‚ù§Ô∏è by Visheshta Garg, IIT Roorkee"
      }
    }
  }
}

